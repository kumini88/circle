<div id="divmodal" class="modal fade" role="dialog" aria-hidden="true"></div>


<header class="cd-auto-hide-header">
		<div class="logo"><a href="/">circle</a></div>
	<nav class="cd-primary-nav">
 
		<ul id="cd-navigation">
			<!-- links here -->
			<% if logged_in? %>
				<li class="searchbox">
					<%= search_form_for @search, url: search_path do |f| %>
	          <li class="searchform"><%= f.text_field :name_cont %></li>
	          <li class="searchbtn"><%= f.submit ("検索"), class: "search-btn" %></li>
	        <% end %>
				</li>
				<li><%= link_to image_tag("post.png", size:20), new_post_path, remote: true %></li>
	      <li><%= link_to image_tag("event.png", size:20), new_event_path, remote: true %></li>
	      <li><%= link_to image_tag("mail.png", size:20), "/rooms/show" %></li>
				<li class="dropdown active">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"><%= image_tag(current_user.icon, size: 30) %></a>
                <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "プロフィール", user_path(current_user) %></li>
                    <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
                </ul>
        </li>
			<% else %>
				<li><%= link_to "アカウント作成", new_user_path %></li>
			<% end %>
		</ul>
	</nav>
</header>