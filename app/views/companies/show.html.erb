<div class="row user">
  <div class="user-left">
    <div class="user-icon">
      <%= image_tag @company.icon, size: 180, class: "img-circle" %>
    </div>
 
  </div>
  <div class="user-right">
    <div class="use">
      <span class="user-name"><%= @company.name %></span>
      <span class="editprof-button pull-right">
        <% if @member_users.include?(current_user) %>
          <%= link_to image_tag("pen.png", size: 17), edit_company_path(@company) %>
        <% end %>
      </span>
    </div>
    <div class="user-prof">
      <%= @company.profile %>
    </div>
    <div class="user-link">
      <% if @company.twitter != "" %><%= link_to image_tag('sns/twitter.png', size: 20), @company.twitter %><% end %>
      <% if @company.facebook != "" %><%= link_to image_tag('sns/facebook.png', size: 20), @company.facebook %><% end %>
      <% if @company.officiallink != "" %><%= link_to image_tag('sns/link.png', size: 20) + @company.officiallink, @company.officiallink %><% end %>
    </div>
  </div>
  <div class="flex-container">
    <div class="follow_button">
      <%= render "companyrelationships/follow_button", company: @company %>
    </div>
  </div>
</div>

<div>
  <%= render "tabs" %>
</div>