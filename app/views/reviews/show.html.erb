<div class="row">
  <div class="eachpost media well col-xs-6">
      <div class="review-title">
        <% if current_user == @user %>
          <span class="pull-right"><%= link_to image_tag("trash.png", size: 10), @review, method: :delete, data: { confirm: "削除しますか？" } %></span>
        <% end %>
        <h5><%= @review.title %></h5>
        <h5><%= @review.userstatus %></h5>
      </div>
      <div class="media-left">
        <% if @review.public == true %>
          <%= image_tag "icon_user_default.jpg", size: 50, class: "media-object img-circle" %>
        <% else %>
          <%= image_tag @user.icon, size: 50, class: "media-object img-circle" %>
        <% end %>
      </div>
      <div class="media-body">
        <% if @review.public == true %>
          <p>匿名</p>
        <% else %>
          <%= link_to @user.name, user %>
          <span class="text-muted">@<%= @user.user_id %></span>
        <% end %>
        <p class="text-muted"><%= @review.created_at.strftime('%Y/%m/%d %H:%M') %></p>
        <p class="post-content"><%= @review.content %></p>
      </div>

      <div class="btn-toolbar pull-right">
        <div class="btn-group">

        </div>
        <div class="btn-group">
          
        </div>
        <div class="btn-group">

        </div>
        <div class="btn-group">

        </div>
      </div>
  </div>
  
  <div class="postcomment col-xs-offset-1 col-xs-5">
    コメント
    <div>
      <div class="comments">

      </div>
    </div>
  </div>
</div>
