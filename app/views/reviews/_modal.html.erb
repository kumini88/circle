<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@review, remote: true) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">口コミを投稿する</h4>
      </div>
      <div class="modal-body">
        <div class="field">
          <div class="form-group">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :userstatus, "ステータス" %>
            <%= f.text_field :userstatus, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :content, "内容" %>
            <%= f.text_area :content, class: "form-control", rows: 10 %>
          </div>
          <div class="form-group">
            <%= f.label :public, "匿名" %>
            <%= f.check_box :public, :as => :boolean, checked:false %>
          </div>
          
          <%= f.submit "投稿", class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>