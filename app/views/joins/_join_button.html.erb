<% if current_user.join?(event) %>
  <%= form_for(current_user.joins.find_by(event_id: event.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :event_id, event.id %>
    <%= image_submit_tag "unjoin.png", width: 25, height: 25 %>
  <% end %>
<% else %>
  <%= form_for(current_user.joins.build) do |f| %>
    <%= hidden_field_tag :event_id, event.id %>
    <%= image_submit_tag "join.png", width: 25, height: 25 %>
  <% end %>
<% end %>
