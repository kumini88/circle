<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@event, remote: true) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">イベントを投稿する</h4>
      </div>
      <div class="modal-body">
        <div class="field">
          <div class="form-group">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group form-inline">
            <%= f.label :date, "日程" %>
            <%= f.datetime_select :date, {use_month_numbers: true}, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :place, "場所" %>
            <%= f.text_field :place, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :place, "詳細" %>
            <%= f.text_area :content, class: "form-control", rows: 10 %>
          </div>
          <div class="form-group">
            <%= f.label :image, "画像" %>
            <%= f.file_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :group_id, "グループとして投稿:" %>
            <%= f.collection_select :group_id, @groups, :id, :name, include_blank: "しない", class: "form-control" %>
          </div>
          <div class="form_group">
            <%= f.label :company_id, "企業 として投稿:" %>
            <%= f.collection_select :company_id, @companies, :id, :name, include_blank: "しない", class: "form-control" %>
          </div>
          <%= f.submit "投稿", class: "btn btn-default btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>