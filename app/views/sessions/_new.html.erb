<div class="row">
  <div class="panel panel-default">
    <div class="panel-header">
      <h1 class="text-center">アカウントをお持ちの方</h1>
    </div>
    <div class="panel-body">
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <%= f.text_field :email, placeholder: "メールアドレス", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder: "パスワード", class: "form-control" %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-default" %>
      <% end %>
      <%= link_to "アカウントを作成する", new_user_path, class:"text-muted pull-right" %>
    </div>
  </div>
</div>