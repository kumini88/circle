<% if comments.count == 0 %>
  <p class="text-center">コメントがありません</p>
<% end %>

<ul class="media-list">
    <% comments.each do |comment| %>
      <% user = comment.user %>
      <li class="media well">
        <div class="media-left">
          <%= image_tag user.icon, size: 50, class: "media-object img-circle" %>
        </div>
        <div class="media-body">
          <%= link_to user.name, user_path(user) %>
          <span class="text-muted"><%= user.user_id %></span>
          <% if current_user == @user %>
            <span class="pull-right"><%= link_to image_tag("trash.png", size: 10), @comment, method: :delete, data: { confirm: "削除しますか？" } %></span>
          <% end %>
          <p class="text-muted"><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></p>
          <p><%= comment.content %></p>
        </div>
      </li>
    <% end %>
</ul>